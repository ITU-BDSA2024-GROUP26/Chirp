@page "/Search"
@model Web.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">

            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="fore-control" />
            </div>
            <div class="fore-group">
                <input type="submit" value="Search" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<!-- Display Search Results -->
@if (Model.SearchResults != null && Model.SearchResults.Any())
{
    <section class="search-results-section mt-4">
    <h2>Search Results</h2>
    <ul class="list-group">
        @foreach (var user in Model.SearchResults)
            {
                <li class="list-group-item">
                    <strong>@user.UserName</strong> - @user.Email
                </li>
            }
        </ul>
    </section>
}
else if (!string.IsNullOrEmpty(Model.SearchPhrase))
{
    <!-- Display a message when no results are found -->
    <section class="search-results-section mt-4">
    <h2>Search Results</h2>
    <p>No users found matching "@Model.SearchPhrase".</p>
</section>
}
