@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.RazorPages
@inject SignInManager<Chirp.Core.Entities.ChirpUser> SignInManager 
@inject UserManager<Chirp.Core.Entities.ChirpUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="navigation">
    @if (SignInManager.IsSignedIn(User))
    {
        <div>
            <a asp-page="/@(User.Identity?.Name)">my timeline</a> |
            <a asp-page="/">public timeline</a> |
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl=@Url.Page("") method="post">
                <button type="submit">logout [@User.Identity?.Name]</button>
            </form>
        </div>
    }
    else
    {
        <div>
            <a asp-page="/">public timeline</a> |
            <a class="nav-link text-dark" asp-area="Identity" asp-page="Account/Register">register</a> |
            <a class="nav-link text-dark" asp-area="Identity" asp-page="Account/Login">login</a>
        </div>
    }
</div>