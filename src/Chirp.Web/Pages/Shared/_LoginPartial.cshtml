@inject SignInManager<Chirp.Core.Entities.Author> SignInManager 
@inject UserManager<Chirp.Core.Entities.Author> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var author = await UserManager.GetUserAsync(User);
}

<div class="navigation">
    @if (SignInManager.IsSignedIn(User))
    {
        <div>
            <a asp-page="/@(author?.Name)">my timeline</a> |
            <a asp-page="/">public timeline</a> |
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl=@Url.Page("") method="post">
                <button type="submit">logout [@author?.Name]</button>
            </form>
        </div>
    }
    else
    {
        <div>
            <a asp-page="/">public timeline</a> |
            <a class="nav-link text-dark" asp-area="Identity" asp-page="Account/Register">register</a> |
            <a class="nav-link text-dark" asp-area="Identity" asp-page="Account/Login">login</a>
        </div>
    }
</div>