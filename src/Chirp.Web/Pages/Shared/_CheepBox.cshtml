@inject SignInManager<Chirp.Core.Entities.Author> SignInManager 
@inject UserManager<Chirp.Core.Entities.Author> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Chirp.Razor.Pages.PublicModel

<div class="cheepbox">
@if (SignInManager.IsSignedIn(User))
{
    <h3>What's on your mind, @Model.Author?.UserName?</h3>
    <form method="post">
        <input type="text" asp-for="Message" required>
        <input type="submit" value="Share">
    </form>
}
</div>