<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>

    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>

    <header>
        <a href="/">Public Timeline</a>
        @await Html.PartialAsync("_LoginPartial")
     </header>
    
    <div class=body>
        @RenderBody()
    </div>
    <div class=footer>
        <div>
            <button type="submit" class="change-page-btns">Previous page</button>
            <button type="submit" class="change-page-btns">Next page</button>
        </div>
        Chirp &mdash; An ASP.NET Application
    </div>
    
</div>
</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
