@page "/{userName}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Chirp.Razor.Pages.PrivateTimelineModel
@inject SignInManager<Chirp.Core.Entities.Author> SignInManager
@inject UserManager<Chirp.Core.Entities.Author> UserManager

@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("userName");
}

<div>

        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/" method="post">
        <button class="ForgetMeButton" style="background-color: red;">Forget Me!</button>
        </form>

    
    <h2> @routeName's Timeline </h2>

    @await Html.PartialAsync("_CheepBox", Model!.Author != null ? Model.Author.UserName : "Invalid User")


    @if (Model.Cheeps.Any())
    {   
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        @await Html.PartialAsync("_AuthorPartial", cheep)
                        @cheep.MessageContent
                        <small>&mdash; @cheep.TimeStampStr</small>
                    </p>
                </li>
            }
        </ul>
    } else {
        <em>There are no cheeps so far.</em>
    }
</div>
